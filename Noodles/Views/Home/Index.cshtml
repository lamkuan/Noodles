@* @model IEnumerable<Noodles.Models.Noodle> *@
@model Noodles.ViewModels.HomeViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>產品列表</h2>

@foreach (var noodle in Model.Noodles)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@noodle.ImageUrl" alt="" />
            <div class="caption">
                @{ var price =  string.Format("{0:F2}", noodle.Price); }
                <h3 class="pull-right">$ @price </h3>
                <h3>
                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@noodle.Id">@noodle.Name</a>
                </h3>
                <p>@noodle.ShortDescription</p>
            </div>
        </div>
    </div>
}

<h2>評論</h2>

<div class="list-group">
    @foreach (var feedback in Model.Feedbacks)
    {
        <a class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="list-group-item-heading">@feedback.Name</h5>
                <small class="pull-right">@feedback.CreateDateUTC</small>
            </div>
            <p>@feedback.Message</p>
        </a>
    }
</div>